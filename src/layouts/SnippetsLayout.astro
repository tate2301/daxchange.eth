---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import Body from "../components/Body.astro";

export interface Props {
  content: {
    title: string;
    description: string;
    pubDate?: string;
    updatedDate?: string;
    heroImage?: string;
  };
}

const {
  content: { title, description, pubDate, updatedDate, heroImage },
} = Astro.props;
---

<html lang="en">
  <head>
    <BaseHead title={title + " - Kamfeskaya"} description={description} />
  </head>

  <Body>
    <main class="py-12 flex flex-col gap-12 max-w-prose mx-auto">
      <section class="flex flex-col gap-2 max-w-prose text-center">
        {
          pubDate && (
            <p class="text-sm">
              Published <time>{pubDate}</time>
            </p>
          )
        }
        <h1 class="text-5xl max-w-xl text-zinc-900">{title}</h1>
        <p>{description}</p>
      </section>
      {
        heroImage && (
          <img
            height={360}
            src={heroImage}
            alt=""
            class="w-full object-cover h-[360px] rounded-xl"
          />
        )
      }

      <article class="mx-auto max-w-prose prose prose-zinc">
        <slot />
      </article>
    </main>
  </Body>
</html>
