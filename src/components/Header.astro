---
import HeaderLink from "./HeaderLink.astro";
import DocumentIconSmall from "./icons/DocumentIconSmall.astro";
import MenuIcon from "./icons/MenuIcon.astro";
import RectangleStackSmall from "./icons/RectangleStackSmall.astro";
const { pathname } = Astro.url;
const isHome = pathname === "/";
---

<header
  class="h-auto w-full max-w-5xl mx-auto flex justify-between items-center relative z-10"
>
  <div>
    {
      isHome ? (
        <div class="h-10 aspect-square" />
      ) : (
        <a href="/">
          <img
            src={"/assets/avatar.jpg"}
            class="aspect-square h-10 rounded-full drop-shadow border-2 border-white"
            alt={"Tatenda Christopher Chinyamakobvu"}
          />
        </a>
      )
    }
  </div>
  <div class="backdrop-blur flex text-sm font-medium">
    <HeaderLink href="/projects">
      <RectangleStackSmall />
      <span>Projects</span>
    </HeaderLink>
    <HeaderLink href="/blog">
      <DocumentIconSmall />
      <span>Writing</span>
    </HeaderLink>
  </div>
</header>
