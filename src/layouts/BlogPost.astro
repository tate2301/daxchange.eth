---
import ArticleBackButton from "../components/ArticleBackButton.astro";
import BaseHead from "../components/BaseHead.astro";
import Body from "../components/Body.astro";
import Footer from "../components/Footer.astro";
import LeftIcon from "../components/icons/LeftIcon.astro";
import RightIcon from "../components/icons/RightIcon.astro";
export interface Props {
  content: {
    title: string;
    description: string;
    pubDate?: string;
    updatedDate?: string;
    heroImage?: string;
  };
}

const {
  content: { title, description, pubDate, updatedDate, heroImage },
} = Astro.props;
---

<html lang="en">
  <head>
    <BaseHead title={title + " - Kamfeskaya"} description={description} />
  </head>

  <Body>
    <main class="flex flex-col-reverse lg:flex-row gap-16 py-32 pt-8">
      <aside
        class="sticky w-full max-w-xl lg:w-64 top-8 flex-shrink-0 h-full flex flex-col gap-4 items-start"
      >
        <button
          onclick={"back()"}
          class="bg-zinc-50 hidden lg:flex font-semibold items-center gap-2 text-zinc-500 py-1 px-3 rounded-xl mb-8 hover:bg-surface-200"
        >
          <LeftIcon />
          Back
        </button>
        <div>
          <img
            src={"/assets/avatar.jpg"}
            class="w-16 h-16 rounded-xl mb-4 -rotate-6 drop-shadow border-4 border-white"
            alt={"Tatenda Chinyamakobvu"}
          />
          <p class="text-zinc-900 font-semibold">
            Tatenda Christopher Chinyamakobvu
          </p>
          <a
            href="https://twitter.com/halfpreneur"
            class="text-zinc-400 text-sm">@halfpreneur</a
          >
        </div>

        <p class="text-zinc-600 text-sm mb-4">
          Builder of things. Designer of experiences. Writer of words. Maker of
          stuff. I'm a software engineer based in Harare, Zimbabwe.
        </p>
        <div>
          <a
            href="mailto:tatendachris@gmail.com"
            target="_blank"
            rel="noopener"
          >
            <button
              class="px-3 flex gap-2 items-center font-medium text-sm py-1 rounded-lg bg-zinc-900 text-white"
            >
              Contact me
              <RightIcon />
            </button>
          </a>
        </div>
      </aside>
      <div class="flex flex-1 flex-shrink-0 flex-col gap-4 lg:px-8">
        <button
          onclick={"back()"}
          class="bg-zinc-50 w-fit lg:hidden font-semibold flex items-center gap-2 text-zinc-500 py-1 px-3 rounded-xl mb-8 hover:bg-surface-200"
        >
          <LeftIcon />
          Back
        </button>
        <section class="flex flex-col gap-1">
          <h1 class="text-3xl max-w-xl text-zinc-900 font-medium w-full">
            {title}
          </h1>
          <p class="text-zinc-400">{description}</p>
        </section>

        <article class="max-w-xl prose prose-zinc">
          <slot />
        </article>
      </div>
    </main>
    <script is:inline>
      const back = () => history.back();
    </script>
  </Body>
</html>
