---
export interface Props extends astroHTML.JSX.AnchorHTMLAttributes {
  description: string;
  href: string;
  image: string;
  title: string;
}

const {
  class: className,
  href,
  title,
  description,
  image,
  ...props
} = Astro.props;
---

<style>
  .background-image {
    /* Transition size from zero to full height and width */
    transition: height 0.5s ease-in-out, width 0.5s ease-in-out;
  }
</style>

<a href={href} class="flex flex-col gap-4" class:list={[className]} {...props}>
  <div class="w-full relative flex items-baseline h-auto justify-center">
    <div
      class={`col-span-1 transition-all duration-200 delay-200 min-h-[400px] w-full h-full lg:min-h-[600px] rounded-xl flex-col justify-end overflow-hidden background-image`}
      style={`
            background-image: url('${image}');
            background-size: cover;
            background-repeat: no-repeat;
            background-position: center;
    `}
    >
    </div>
  </div>

  <div class="w-full flex justify-between">
    <div class="w-full py-4 flex flex-col gap-1 max-w-xl">
      <div class="flex gap-2 items-baseline w-full">
        <h3 class="font-semibold tracking-tighter text-zinc-900 text-xl">
          {title}
        </h3>
      </div>
      <p class="tracking-tighter text-zinc-600 line-clamp-3">
        {description}
      </p>
    </div>
  </div>
</a>
