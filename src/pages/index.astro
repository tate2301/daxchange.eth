---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../config";
import Body from "../components/Body.astro";
import HomeProjectListing from "../components/HomeProjectListing.astro";
import TickerCarousel from "../components/react/TickerCarousel";
import LinkIcon from "../components/icons/LinkIcon.astro";
import ExternalLinkIcon from "../components/icons/ExternalLinkIcon.astro";

const posts = (await Astro.glob("./blog/*.{md,mdx}"))
  .sort(
    (a, b) =>
      new Date(b.frontmatter.pubDate).valueOf() -
      new Date(a.frontmatter.pubDate).valueOf()
  )
  .slice(0, 3);

const personal_projects = [
  {
    name: "Telescope",
    description:
      "Iâ€™ve worked on tons of little projects over the years but these are the ones that Iâ€™m most proud of.",
    href: "https://telescope.kamfeskaya.com",
    icon: "/projects/telescope.webp",
    domain: "telescope.kamfeskaya.com",
  },
  {
    name: "Paynow React",
    description:
      "A React wrapper for the Paynow SDK allowing you to use Paynow on client-side",
    href: "/projects/paynow-react",
    icon: "/projects/paynow-react.jpg",
    domain: "github.com",
  },
];
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <Body>
    <div class="flex flex-col gap-16 md:gap-32">
      <div class={"w-full max-w-prose py-16 flex flex-col gap-8"}>
        <img
          src={"/assets/avatar.jpg"}
          class="w-16 h-16 rounded-full drop-shadow border-2 border-white"
          alt={"Tatenda Christopher Chinyamakobvu"}
        />
        <div>
          <h1 class="font-semibold text-xl text-zinc-900">
            Tatenda Christopher Chinyamakobvu
          </h1>
          <p>Product designer & frontend engineer</p>
        </div>
        <div class="prose prose-zinc">
          <p>
            Zimbabwean product designer and frontend engineer living in Harare.
            Currently leading the Product Engineering team at <a
              href="https://pagka.framer.website/"
              class="font-medium text-zinc-900">Pagka</a
            >, working to make student accommodation search easier. On weekends
            I am building a startup to bring the best desks and utilities to
            your workspace.
          </p>
          <p>
            I am open to collaborations and freelance projects. You can download
            my
            <a
              href="https://read.cv/kamfeskaya"
              class="font-semibold underline text-zinc-900"
              target="_blank"
              rel="noopener">CV</a
            > or get in touch
            <a
              href="mailto:tatendachris@gmail.com"
              target="_blank"
              rel="noopener"
              class="font-semibold underline text-zinc-900"
              >tatendachris@gmail.com</a
            >
          </p>
        </div>
        <div>
          <a href="mailto:tatendachris@gmail.com">
            <button
              class={"text-orange-50 bg-zinc-900 px-6 py-3 rounded-full shadow font-medium"}
            >
              Let's have a chat ðŸ¡’
            </button>
          </a>
        </div>
      </div>

      <div class="flex flex-col gap-16">
        <div class="flex">
          <h2 id="magic" class="text-5xl font-medium text-zinc-900">
            <span class="magic-heading">Selected projects 2020 - 2022 â†“</span>
          </h2>
        </div>

        <HomeProjectListing
          title="Pekugara"
          description={`An exclusive community for student accommodation seekers and providers.`}
          href="/work/pekugara"
          image="/assets/pekugara/M1.png"
        />
        <HomeProjectListing
          title="Base"
          description="Webflow Development, Advanced Animations, Custom Code"
          href="/work/pekugara"
          image="/assets/eslint/Banner.png"
        />
        <HomeProjectListing
          title="Soterio"
          description="BLE based COVID-19 contact tracing for Zimbabwean Universities."
          href="/work/landing-pages"
          image="/assets/littlebird/M8.jpg"
        />
      </div>

      <section class="flex flex-col gap-16">
        <h2 class="text-5xl font-medium text-zinc-900">Side projects</h2>
        <ul class="grid grid-cols-1 md:grid-cols-2 gap-8">
          {
            personal_projects.map((post) => (
              <li class="p-4 md:p-8 col-span-1 bg-zinc-50 rounded-xl overflow-hidden relative group shadow border border-white">
                <div class="absolute h-full w-full" />
                <a href={post.href} class="flex flex-col gap-8 relative">
                  <div class="w-16 h-16 border border-white shadow rounded-xl bg-white p-1">
                    <img
                      src={post.icon}
                      class="object-fit object-center w-full h-full"
                    />
                  </div>{" "}
                  <div>
                    <h3 class="text-zinc-900 font-medium text-xl">
                      {post.name}
                    </h3>
                    <p class="line-clamp-2">{post.description}</p>
                  </div>
                  <div class="flex text-sm gap-2 items-center font-medium text-zinc-500">
                    <ExternalLinkIcon />

                    <p>{post.domain}</p>
                  </div>
                </a>
              </li>
            ))
          }
          <li
            class="p-4 md:p-8 col-span-2 bg-zinc-50 rounded-xl overflow-hidden relative group shadow border border-white"
          >
            <div class="absolute h-full w-full"></div>
            <a href={"https://zicheni.io"} class="flex flex-col gap-8 relative">
              <div
                class="w-16 h-16 border border-white shadow rounded-xl bg-white"
              >
                <img
                  src={"/projects/saas-utils.png"}
                  class="object-cover w-full h-full"
                />
              </div>
              <div>
                <h3 class="text-zinc-900 font-medium text-xl">Zicheni</h3>
                <p class="line-clamp-2">
                  The Swiss pocket knife for building, running and scaling your
                  SaaS startup.
                </p>
              </div>

              <div
                class="flex text-sm gap-2 items-center font-medium text-zinc-500"
              >
